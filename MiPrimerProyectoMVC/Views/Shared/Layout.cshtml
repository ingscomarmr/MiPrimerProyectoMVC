
<!DOCTYPE html>
<!--Layout predefinido para no repetir todo el codigo-->
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Mi primer App MVC - @ViewBag.TitlePage</title>
    <link href="~/assets/css/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/assets/js/jquery_3_1_1-min.js"></script>
    <style>
        .form-group label {
            display: block;
        }

        .form-group {
            display: block;
        }

        .form-group .form-control {
            padding: 4px;
            /*width: 300px;*/
        }

        /*
        button {
            margin-top: 15px;
        }*/

        .alert {
            text-align: center;
            background: green;
            color: #eee;
            padding: 4px;
        }

        .alert button {
            display: none;
        }

        .failed {
            border: 1px solid red;
        }

        /*
        form {
            position: relative;
            padding: 10px;
            width: 300px;
        }*/

        .block-loading {
            position: absolute;
            width: 100%;
            height: 100%;
            top: 0;
            left: 0;
            background: #fff url('../../assets/fonts/loader.gif') no-repeat center center;
            opacity: 0.7;
        }
    </style>

</head>
<body>

    <div class="container">
        <h1 class="jumbotron">
           @ViewBag.TitlePage
        </h1>
        @RenderBody()
    </div>
 

    <script src="~/assets/js/bootstrap.min.js"></script>            
    <script src="~/assets/js/jquery.validate.min.js"></script>
    <script src="~/assets/js/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/assets/js/init.forms.js"></script>
    <script src="~/assets/js/jquery.form.min.js"></script>
</body>
</html>
